<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <color name="default_bg_color">#000000</color>
    
    <style name="ListView" parent="@android:style/Widget.ListView">
	    <item name="android:background">@color/LightGrey</item>
	</style>
	
    <style name="default_bg">
        <item name="android:background">#000000</item>
    </style>
    
    <style name="home_icon_row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">30dip</item>
        <item name="android:paddingLeft">20dip</item>
        <item name="android:paddingRight">20dip</item>
    </style>
    
    <style name="home_icon">
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:background">@null</item>
    </style>
    
    <style name="app_calendar_sidebar_item">
    </style>
</resources>